# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ZORK_ASSISTANT_ID=asst_your_assistant_id_here
OPENAI_MODEL=gpt-3.5-turbo

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# URLs permitidas separadas por comas (opcional, por defecto permite localhost)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://tu-frontend.com
# URL del frontend en producción (se agrega automáticamente a allowed origins)
FRONTEND_URL=https://tu-frontend.com

# Database Configuration (MySQL)
DB_HOST=your_mysql_host
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
